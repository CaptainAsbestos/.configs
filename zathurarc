# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
#set smooth-scroll "true" ##deprecated
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions "hvs"

# solarized dark

set font "hack 10"
set default-bg "#002b3600" #00
set default-fg "#665c54" #01

set statusbar-bg "#1d2021" #04
set statusbar-fg "#bdae93" #01
set statusbar-h-padding 20
set statusbar-v-padding 10

set inputbar-bg "#32302f" #00 currently not used
set inputbar-fg "#98971a" #02

set notification-error-bg "#d65d0e" #08
set notification-error-fg "#282828" #00

set notification-warning-bg "#cc241d" #08
set notification-warning-fg "#282828" #00

set highlight-color "#d79921" #0A
set highlight-active-color "#689d6a" #0D
set highlight-transparency 0.33

set completion-highlight-fg "#282828" #02
set completion-highlight-bg "#458588" #0C

set completion-bg "#282828" #02
set completion-fg "#bdae93" #0C

set notification-bg "#d79921" #0B
set notification-fg "#282828" #00

##set tabbar-bg "#002b36"
##set tabbar-fg "#586e75"
##set tabbar-focus-bg "#073642"
##set tabbar-focus-fg "#93a1a1"

set page-padding 1
set page-cache-size 15
#set pages-per-row 2

set render-loading 1
set render-loading-bg "#32302f"
set render-loading-fg "#458588"

set recolor "true"
set recolor-lightcolor "#32302f" #00
#set recolor-lightcolor "#eee8d5" #00
set recolor-darkcolor "#ebdbb2" #06
#set recolor-darkcolor "#586e75" #06
set recolor-reverse-video "true"
set recolor-keephue "true"

set selection-clipboard clipboard

set scroll-step 50

unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

map j scroll left
map k scroll down
map l scroll up
map ; scroll right
map h focus_inputbar ":"

map K scroll full-down
map L scroll full-up

map [fullscreen] j scroll left
map [fullscreen] k scroll down
map [fullscreen] l scroll up
map [fullscreen] ; scroll right
map [fullscreen] h focus_inputbar ":"


